{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "NodeNext",                       /* Specify how TypeScript looks up a file from a given module specifier. */
    "target": "es2017"
  },
  "compileOnSave": true,
  "include": [
    "src", "../.eslintrc.json"
  ]
}
