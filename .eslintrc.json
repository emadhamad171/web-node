{
  "root": true,
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "extends": ["eslint:recommended", "prettier", "plugin:sonar/recommended"],
  "parser": "@typescript-eslint/parser",
  "env": {
    "es2021": true,
    "node": true
  },
  "plugins": ["sonar", "@typescript-eslint"],
  "rules": {
    "sonar/deprecation": 1
  }
}
