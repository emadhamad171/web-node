{
  "root": true,
  "parserOptions": {
     "ecmaVersion": 12,
    "sourceType": "module",
    "extraFileExtensions:": [".json"]
  },
  "extends": ["eslint:recommended", "prettier", "plugin:json/recommended", "plugin:sonar/recommended"],
  "parser": "@typescript-eslint/parser",
  "env": {
    "es2022": true,
    "node": true
  },
  "plugins": ["sonar", "@typescript-eslint", "json"],
  "rules": {
    "sonar/deprecation": 1
  }
}
